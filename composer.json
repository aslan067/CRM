{
  "name": "crm/laravel-crm",
  "type": "project",
  "description": "Laravel ve MySQL tabanli CRM uygulamasi icin temel iskelet.",
  "keywords": ["laravel", "crm", "mysql"],
  "license": "MIT",
  "require": {
    "php": "^8.1",
    "laravel/framework": "^10.0"
  },
  "require-dev": {
    "fakerphp/faker": "^1.21",
    "laravel/pint": "^1.13",
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate"
    ]
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
